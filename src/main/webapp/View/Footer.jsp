<%@page contentType="text/html" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Footer Example</title>
    </head>
    <body>
        <footer class="mt-5">
            <div class="footer-content container-fuild">
                <!-- Penguin Store Description -->
                <div class="footer-section">
                    <h3>PENGUIN STORE</h3>
                    <p>We provide an online fashion shopping experience with the best quality products. Enjoy convenient service and fast delivery!</p>
                    <div class="social-icons">
                        <div class="icon"><i class="fab fa-discord"></i></div>
                        <div class="icon"><i class="fab fa-instagram"></i></div>
                        <div class="icon"><i class="fab fa-facebook-f"></i></div>
                        <div class="icon"><i class="fab fa-twitter"></i></div>
                    </div>
                </div>

                <!-- Categories -->
                <div class="footer-section">
                    <h3>Category</h3>
                    <ul>
                        <li><div>Shirt</div></li>
                        <li><div>Trousers</div></li>
                        <li><div>Accessories</div></li>
                        <li><div>New</div></li>
                    </ul>
                </div>

                <!-- Client Support -->
                <div class="footer-section">
                    <h3>Client Support</h3>
                    <ul>
                        <li><div>Return policy</div></li>
                        <li><div>Pay</div></li>
                        <li><div>Ordering instructions</div></li>
                    </ul>
                </div>

                <!-- About -->
                <div class="footer-section">
                    <h3>About</h3>
                    <ul>
                        <li><div>About Penguin Store</div></li>
                        <li><div>Privacy policy</div></li>
                        <li><div>Support</div></li>
                        <li><div>Terms of service</div></li>
                    </ul>
                </div>
            </div>

            <!-- Footer Bottom -->
            <div class="footer-bottom">
                &copy; 2025 Penguin Store
            </div>
        </footer>
        <!-- Footer Icon -->
        <div class="footer-icon">
            <nav>
                <span class="mdi mdi-penguin"></span>
                <span>PENGUIN</span>
            </nav>
        </div>
    </body>
</html>
